script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.js", type="text/javascript")
{% include 'autocomplete_light/static.html' %}

html
  head
    title Abelujo {% block pagetitle %} {% endblock %}
  body.container
    span
      h1 Abelujo
      a(href="/admin") admin

    div.col-md-2(id="menu")
          h2
            a(href="/collection") Mon stock
          h2
            a(href="/search") Nouvelle entrée
          h2
            a(href="/deposits") Dépôts

    div.col-md-10(id="content")
      {% if messages %}
      ul
        {% for msg in messages %}
        <li {% if msg.tags %} class="{{ msg.tags }}" {% endif %}> {{msg}} </li>
        {% endfor %}
      {% endif %}
      {% block content %}
      {% endblock content %}
    div(id="footer")
      span Qui sommes-nous ?