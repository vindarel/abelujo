{% extends "registration/headers.jade" %}
{% load i18n %}

{% block content %}
.col-lg-4
.col-lg-4
   form.form-signin(method="post", action="{% url 'django.contrib.auth.views.login' %}")
    {% csrf_token %}
    h2.form-signin-heading {% trans "Please sign in to Abelujo" %}
    table.table-condensed
      tr
        td {{ form.username.label_tag }}
        td {{ form.username }}
      tr
      tr
        td {{ form.password.label_tag }}
        td {{ form.password }}

    input.btn.btn-lg.btn-primary.btn-block(type="submit", value='{% trans "login" %}')
    input(type="hidden", name="next", value="{{ next }}")
    {% if form.errors %}
    p {% trans "Your username and password didn't match. Please try again." %}
  {% endif %}
.col-lg-4

{% endblock content %}