{% extends "base.jade" %}

{% block content %}

{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}

if deposits
  h3 Dépôts existants:
else
  h3 Aucun dépôt existant
table.table.table-striped.table-hover
  for dep in deposits
    tr
      td {{ dep.name }}
      td {{ dep.distributor.name }}

a.btn.btn-primary(href="{% url 'deposits_new' %}") Nouveau dépôt
{% endblock content %}