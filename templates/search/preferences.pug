{% extends "base.pug" %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}
{% load ngfilter %}

if messages
  ul.messages
    for msg in messages
      li  {{ msg }}

h1 {% trans "Preferences" %}
.row
  h3 {% trans "Sells" %}
  .col-lg-6
    form(action="{% url 'search:preferences' %}", method="post")
        {% csrf_token %}
        {% bootstrap_form form %}
        input(type="submit", value="Submit")

.row
  h3 {% trans "Personal and banking information" %}
  .col-lg-6
    form(action="{% url 'search:preferences_bookshop' %}", method="post")
        {% csrf_token %}
        {% bootstrap_form bookshopform %}
        input(type="submit", value="Submit")

{% endblock content %}
