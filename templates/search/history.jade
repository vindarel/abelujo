{% extends "base.jade" %}

{% block content %}

{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}


div(ng-controller="historyController")
    h3 Historique des ventes
    div(
      ng-repeat="hist in history"
    )
      div
        a(href="{% verbatim %} {{ hist.item.details_url }} {% endverbatim %}") Vente du {% verbatim %} {{hist.item.date }}: {{hist.item.cards.length}} notices {% endverbatim %}
        div total: {% verbatim %} {{hist.item.total_price}} {% endverbatim %}
        div(ng-repeat="card in hist.item.cards")
          div {% verbatim %} {{ card.title }} {% endverbatim %}

{% endblock content %}