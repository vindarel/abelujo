{% extends "base.pug" %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}

if messages
  ul.messages
    for msg in messages
      li  {{ msg }}

h1 {% trans "Edit this card" %}

form(action="{% url 'search:card_edit' pk %}", method="post")
  .col-lg-6
    {% csrf_token %}
    {% bootstrap_form form %}
    input.btn.btn-primary(type="submit", value="{% trans 'Validate' %}")

  .col-lg-6
    input.btn.btn-primary(type="submit", value="{% trans 'Validate' %}")

{% endblock content %}
