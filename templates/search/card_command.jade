{% extends "base.jade" %}


{% block content %}
{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}
{% load ngfilter %}



div(ng-controller="cardCommandController")

 h3 {% trans "Command " %} "{{ 'card.title' | ng }}"
 div
    uib-alert(
      ng-repeat="alert in alerts"
      type="{{ 'alert.level' | ng }}"
      close="closeAlert($item)"
      ng-click="closeAlert($item)"
    )
      {{ 'alert.message' | ng }}

 .row
   div clients: {{ 'clients' | ng }}
   form(ng-submit="validate()")
     select.form-control(ng-model="client"
       ng-options="it.__repr__ for it in clients")

     button.btn.btn-success(ng-submit="validate()") {% trans "OK" %}

{% endblock content %}
