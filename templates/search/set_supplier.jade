{% extends "base.jade" %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% load ngfilter %}
{% bootstrap_css %}
{% bootstrap_javascript %}


{% if messages %}
ul.messages
  {% for msg in messages %}
  uib-alert {{ msg }}
  {% endfor %}
{% endif %}

form(method='post', action="{% url 'cards_set_supplier' %}")
  {% csrf_token %}
  h4 {% trans "Set the supplier" %}
  div {% trans "cards impacted: " %} {{ nb_cards }}
  {{ form.as_p }}

  input.btn.btn-primary(type='submit', value='{% trans "Validate" %}')


h4 {% trans "Or create a new one" %}

form(method='post', action="{% url 'cards_set_supplier' %}")
  {% csrf_token %}
  h4 {% trans "New distributor" %}

  // xxx: missing form errors.
  {{ newsupplier_form.as_p }}

  input.btn.btn-primary(type='submit', value='{% trans "Validate" %}')

{% endblock content %}
