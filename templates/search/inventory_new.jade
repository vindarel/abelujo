{% extends "base.jade" %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}

h3 {% trans "Inventory ongoing" %}
div(ng-controller="inventoryNewController")
  form(method="get")
    .row
      p.input-group
          div {% trans "Search in the stock" %}
          input.nullable.form-control(
            type='text'
            typeahead-loading="loadingCards"
            ng-model='{% verbatim %}copy_selected{% endverbatim %}'
            typeahead='{% verbatim %} copy.repr for copy in getCards($viewValue, card_type_id) {% endverbatim %}'
            typeahead-min-length="3"
            typeahead-on-select="add_selected_card($item)"
            title="{% trans 'Use TAB to validate your choice, Enter to proceed.'%}"
            id="default-input"
          )
          i.glyphicon.glyphicon-refresh.ng-cloak(ng-show='loadingCards')

          span.input-group-btn
            button.btn.btn-default(type='button')
              i.glyphicon.glyphicon-refresh


  h3.ng-cloak(ng-show="cards_selected.length")
    {% verbatim %} {{ getTotalCopies() }} {% endverbatim %} {% trans "titles selected. Total:" %} {% verbatim %} {{ total_price }} {% endverbatim %}
  div(ng-cloak, ng-show="cards_selected", ng-repeat="card in cards_selected")
    h4
      a(href="{% verbatim %} {{ card.details_url }} {% endverbatim %}") {% verbatim %} {{card.title}} {% endverbatim %}
      span {% verbatim %} {{card.authors_repr}} {% endverbatim %}
      i.glyphicon.glyphicon-warning-sign(
        ng-show="{% verbatim %} cards_selected[$index].ambiguous_sell {% endverbatim %}"
        title="{% trans 'There is a conflict with deposits.' %}")
      i.glyphicon.glyphicon-remove(ng-click="remove_from_selection($index)", style="float: right;")
      i.glyphicon.glyphicon-exclamation-s

     span
        .col-md-1
        p.input-group
            label.sr-only {% trans "Quantity" %}
            span.input-group-addon X
            input.form-control(
                type="number", min=0, max=99
                ng-model="{% verbatim %} cards_selected[$index].quantity {% endverbatim %}"
                ng-change="{% verbatim %} updateTotalPrice() {% endverbatim %}"
            )

{% endblock content %}