{% extends "base.jade" %}

{% block auto_command_nb %} {{ auto_command_nb }} {% endblock %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}

form(action='{% url "card_collection" %}', method="post")
  {% csrf_token %}
  {% bootstrap_form searchForm %}
  // {{ form.as_p }}
  input.btn.btn-primary(type='submit', value="{% trans 'valider' %}")


unless book_list
  p.bg-info {% trans "Aucun résultat" %}

span: span {{ nb_results }} {% trans "results" %}
      a(href="{% url 'card_collection' %}?format=text")
        input.btn.btn-primary(type="submit", value="{% trans 'voir en texte' %}", style="float: right;")

for b in book_list
  table.table.table-condensed
    tr
      if b.img
        td: img(src="{{ b.img }}")
      td
        span
          h3: a(href="{{ b.get_absolute_url }}", title='{% trans "Modifiez la notice" %}') {{b.title}}
          if b.details_url
            a(target="_blank", href="{{ b.details_url }}") {% trans "Voir sur" %} {{ b.data_source }}
        if b.authors
          h4 {{b.authors}}
        table.table-condensed
          tr
            if b.publishers
              td
                span
                  b(title="{{ b.publishers }}") {% trans "éditeur" %} 
                  span(title="{{ b.publishers }}") {{ b.publishers | truncatewords:2}}
            td
              span
                b isbn 
                span {{ b.isbn }}
            td
              span
                b(title="{% if not collection %} collection inconnue {% endif%}") {% trans "collection" %} 
                span(title="{% if not b.collection %} collection inconnue {% endif%}")
                  {% if not collection %}
                  span ---
                  {% else %}
                  span {{ b.collection }}
                  {% endif %}
            td
              {{ b.price }} €
          tr
            if b.distributor
              td
                span
                  b {% trans "diffuseur" %} 
                  span {{ b.distributor }}
            td
              b {% trans "stockage" %} 
              span {{ b.places }}
            td
              b {% trans "en stock" %} 
              span {{ b.quantity }}

  form(action='/collection/sell/', method='post') {% csrf_token %}
    // input(type='hidden', value=b.title, name='book')
    input(type='hidden', value="{{ b.title }}", name='title')
    input(type='hidden', value="{{ b.authors }}", name='authors')
    input(type='hidden', value="{{ b.price }}", name='price')
    input(type='hidden', value="{{ b.id }}", name='id')
    input(type='hidden', value=b, name='book')
    input.btn.btn-primary(type='submit', value='{% trans "Vendre" %}')

  form.form-inline(action="/deposits/addcard/", method="post") {% csrf_token %}
    {% bootstrap_form AddToDepositForm %}
    input(type="hidden", value='{% url "card_collection" %}', name="redirect_to")
    input(type="hidden", value="{{ b.ean }}", name="ean")
    input.btn.btn-primary(type="submit", value='{% trans "ajouter au dépôt" %}')

{% endblock content %}