{% extends "base.jade" %}

{% block auto_command_nb %} {{ auto_command_nb }} {% endblock %}

{% block content %}

{% load i18n %}
{% load bootstrap3 %}
{% bootstrap_css %}
{% bootstrap_javascript %}
{% load ngfilter %}

h3 {% trans "Search in the stock" %}

div(ng-cloak, ng-show="cards", ng-controller="collectionController")

 div
    alert(
      ng-repeat="alert in alerts"
      type="{{ 'alert.level' | ng }}"
      close="closeAlert($item)"
      ng-click="closeAlert($item)"
    )
      {{ 'alert.message' | ng }}

 .row
  .col-md-6
   form
    div.form-group
      label.col-md-4 Search terms
      div.col-md-8
        input.form-control#default-input(
          ng-model="query"
          type="text"
          placeholder='{% trans "Search on title, authors or isbn" %}'
        )

 .row
   .col-md-6
    form
     div
        label.col-sm-4 Type of card
        div.col-md-8
          select.form-control(
            ng-model="card_type"
            ng-options="elt.name group by elt.group for elt in card_types"
          )

    div
      label.col-sm-4 Publisher
      div.col-md-8
        select.form-control(
          ng-model="publisher"
          ng-options="elt.fields.name for elt in publishers")

   .col-md-6
    form
     div.form-group
        label.col-sm-4 Places
        div.col-md-8
          select.form-control(
            ng-model="place"
            ng-options="elt.name for elt in places")

    div.form-group
      label.col-sm-4 Category
      div.col-md-8
        select.form-control(
          ng-model="category"
          ng-options="elt.fields.name for elt in categories")

 .row
  .col-md-4
     input.btn.btn-primary(value="{% trans 'Search' %}", ng-click="validate()", type="submit")

  //- span: a(href="{% url 'card_collection' %}?format=text")
        input.btn(type="submit", value="{% trans 'voir en texte' %}", style="float: right;")

 .row
   .col-md-9
   .col-md-1
     button.button.btn.btn-default(ng-click="open()", ng-show="selected", title='{% trans "Add the cards selected to basket(s)" %}'){% trans 'Add to…' %}
      i.glyphicon.glyphicon-pushpin


 table.table.table-striped(ng-show="cards", datatable="ng")
    thead
      th {% trans "Title" %}
      th {% trans "Authors" %}
      th {% trans "Publishers" %}
      th {% trans "Quantity" %}
      th: input(type="checkbox", ng-click="toggleAll()")

    tbody
      tr(ng-repeat="card in cards")
        td
          .row
            .col-md-6
              img.myImg(ng-show="card.img", src="{{ 'card.img' | ng }}")
            .col-md-6
              h4: a(href="{{ 'card.get_absolute_url' | ng }}") {{ 'card.title' | ng }}
              a(ng-show="card.details_url", href="{{ 'card.details_url' | ng }}", target="_blank") {% trans "See on" %} {{ 'card.data_source' |ng}}
              div {{ 'card.price' |ng }} €
              div
                b isbn: 
                span {{ 'card.isbn' |ng}}
              div(ng-show="card.places")
                b lieux: 
                span {{ 'card.places' | ng}}

        td
          div(ng-repeat="author in card.authors")
            div {{ 'author.fields.name' |ng}}
        td {{ 'card.pubs_repr' | ng }}
        td {{ 'card.quantity' | ng }}
        td: input(type="checkbox", ng-model="selected[card.id]")

 script(type="text/ng-template", id="collectionModal.html")
    div.modal-header
      h3.modal-title {% trans "Add to basket(s)" %}

    div.modal-body
      div(ng-repeat="basket in baskets")
        span
          input(type="checkbox", ng-model="selected_baskets[basket.id]")
          label {{ 'basket.name' | ng}}

      button.btn.btn-primary(ng-click="ok()") OK

{% endblock content %}
