{% load staticfiles %}
{% load i18n %}
!!! 5
html
head
  link(rel='stylesheet', type='text/css', href='{% static "search/style.css" %}')
  style.
    @page {
      margin: 2cm;
      size: a4 portrait;

        @bottom-right{
          content: counter(page) " / " counter(pages);
        }

        @frame header_frame {
            -pdf-frame-content: header_content;
            left: 50pt; width: 512pt; top: 50pt; height: 40pt;
        }

        @frame content_frame {
            left: 50pt; width: 512pt; top: 90pt; height: 632pt;
        }

        @frame footer_frame {
            -pdf-frame-content: footer_content;
            left: 50pt; width: 512pt; top: 772pt; height: 20pt;
        }

        @bottom-center {
          content: "Abelujo http://abelujo.cc/ - logiciel libre pour librairies et éditeurs"
        }
    }

  body
    h2#header_content(style="{text-align: center;}")  {{ name }}
    div Facture du: {{ date }}

    div Adressée à:

    div Objet:

    div
      div Montant avant remise: {{ total }}
      div Remise: xx %
      div Total remisé: {{ total_with_discount }}

    div
      div Merci de blah blah
      bold IBAN: xx-xx
